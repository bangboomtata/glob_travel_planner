generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Uses connection pooling
  url       = env("POSTGRES_PRISMA_URL")
  // Uses direct connection, ⚠️ make sure to keep this to `POSTGRES_URL_NON_POOLING`
  // or you'll have dangling databases from migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Question {
  id        Int          @id @default(autoincrement())
  text      String
  type      QuestionType
  options   String[]
  createdAt DateTime     @default(now())
  // answers     Answer[]     

  @@map("questions")
}

model Preference {
  id        Int      @id @default(autoincrement())
  userId    Int
  answers   Json
  createdAt DateTime @default(now())

  @@map("preferences")
}

model Itinerary {
  id                 Int      @id @default(autoincrement())
  generatedItinerary Json
  userId             Int
  createdAt          DateTime @default(now())

  @@map("itineraries")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

enum QuestionType {
  TRAVEL_TASTE
  DIETARY_RESTRICTIONS
  DISLIKE_ACTIVITIES
  TRAVEL_TASTE_2
  WEATHER
  TRIP_DURATION
  AIRPORT
  START_DATE
  START_DATE_FLEXIBILITY
  BUDGET
}
